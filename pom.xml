<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.slightlymagic.laterna</groupId>
  <artifactId>LaternaMagica</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>LaternaMagica</name>
  <description>An implementation of the Magic Trading Card Game, featuring Rules Enforcement, playing against human and computer, multiplayer games and more.</description>
  <url>http://code.google.com/p/laterna-magica/</url>
  <scm>
  	<connection>scm:svn:http://code.google.com/p/laterna-magica/trunk/LaternaMagica/</connection>
  	<developerConnection>scm:svn:https://code.google.com/p/laterna-magica/trunk/LaternaMagica/</developerConnection>
  	<url>http://code.google.com/p/laterna-magica/source/browse/#svn/trunk/LaternaMagica/</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.5</version>
        <configuration>
          <taglets>
            <taglet>
              <tagletClass>net.slightlymagic.laterna.doc.taglets.RuleRefTaglet</tagletClass>            
            </taglet>
          </taglets>
          <tagletArtifact>
            <groupId>net.slightlymagic.laterna</groupId>
            <artifactId>LaternaDoc</artifactId>
            <version>0.1.0</version>
          </tagletArtifact>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
  	<dependency>
  		<groupId>com.google.guava</groupId>
  		<artifactId>guava</artifactId>
  		<version>r06</version>
  	</dependency>
  	<dependency>
  		<groupId>org.slf4j</groupId>
  		<artifactId>slf4j-api</artifactId>
  		<version>1.6.1</version>
  	</dependency>
  	<dependency>
  		<groupId>org.slf4j</groupId>
  		<artifactId>slf4j-log4j12</artifactId>
  		<version>1.6.1</version>
  	</dependency>
  	<dependency>
  		<groupId>junit</groupId>
  		<artifactId>junit</artifactId>
  		<version>4.8.1</version>
  		<scope>test</scope>
  	</dependency>
  	<dependency>
  		<groupId>org.swinglabs</groupId>
  		<artifactId>swingx</artifactId>
  		<version>1.6.1</version>
  	</dependency>
  	<dependency>
  		<groupId>net.slightlymagic.utils</groupId>
  		<artifactId>Utils</artifactId>
  		<version>0.0.3</version>
  	</dependency>
  </dependencies>
</project>